<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhi.doctor.LoginActivity"
    android:background="#228956">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="good to see you"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textColor="#DDCFD0"
            android:textSize="35dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/loginusername"
            android:layout_width="300dp"
            android:layout_height="59dp"
            android:ems="10"
            android:layout_marginTop="25dp"
            android:inputType="textPersonName"
            android:hint="UserName"
            android:textColorHint="#8e8d8d"
            android:textColor="#444343"
            android:background="#dbd6d7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="4dp" />

        <EditText
            android:id="@+id/loginpassword"
            android:layout_width="300dp"
            android:layout_height="59dp"
            android:textColor="#444343"
            android:ems="10"
            android:layout_marginTop="25dp"
            android:background="#dbd6d7"
            android:inputType="textPersonName"
            android:hint="Password"
            android:textColorHint="#8e8d8d"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="107dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="LOGIN"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#092d08"/>

        <TextView
            android:id="@+id/loginregisterhere"
            android:layout_width="200dp"
            android:textSize="19dp"
            android:layout_marginTop="25dp"
            android:padding="7dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_height="43dp"
            android:text="Register Here"
            android:background="#092d08"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="178dp" />

        </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:hint="ChattingPerson's Name"
            android:id="@+id/username"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="ChatRoom"
            android:id="@+id/chatroom"/>    </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
